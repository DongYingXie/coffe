<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HelloCordova</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
		<platform name="android">
				<icon src="android/drawable-ldpi/ic_launcher.png" density="ldpi"/>
				<icon src="android/drawable-mdpi/ic_launcher.png" density="mdpi"/>
				<icon src="android/drawable-hdpi/ic_launcher.png" density="hdpi"/>
				<icon src="android/drawable-xhdpi/ic_launcher.png" density="xhdpi"/>
				<icon src="android/drawable-xxhdpi/ic_launcher.png" density="xxhdpi"/>
				<icon src="android/drawable-xxxhdpi/ic_launcher.png" density="xxxhdpi"/>
		</platform>
 
       <platform name="ios">
              <!-- iOS 8.0+ -->
              <!-- iPhone 6 Plus  -->
              <icon src="ios/icon-60@3x.png" width="180" height="180" />
              <!-- iOS 7.0+ -->
              <!-- iPhone / iPod Touch  -->
              <icon src="ios/icon-60.png" width="60" height="60" />
              <icon src="ios/icon-60@2x.png" width="120" height="120" />
              <!-- iPad -->
              <icon src="ios/icon-76.png" width="76" height="76" />
              <icon src="ios/icon-76@2x.png" width="152" height="152" />
              <!-- iOS 6.1 -->
              <!-- Spotlight Icon -->
              <icon src="ios/icon-40.png" width="40" height="40" />
              <icon src="ios/icon-40@2x.png" width="80" height="80" />
              <!-- iPhone / iPod Touch -->
              <icon src="ios/icon.png" width="57" height="57" />
              <icon src="ios/icon@2x.png" width="114" height="114" />
              <!-- iPad -->
              <icon src="ios/icon-72.png" width="72" height="72" />
              <icon src="ios/icon-72@2x.png" width="144" height="144" />
              <!-- iPhone Spotlight and Settings Icon -->
              <icon src="ios/icon-small.png" width="29" height="29" />
              <icon src="ios/icon-small@2x.png" width="58" height="58" />
              <!-- iPad Spotlight and Settings Icon -->
              <icon src="ios/icon-50.png" width="50" height="50" />
              <icon src="ios/icon-50@2x.png" width="100" height="100" />
     </platform>
    <content src="index.html" />
    <access origin="*" />
</widget>
